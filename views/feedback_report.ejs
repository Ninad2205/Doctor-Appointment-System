<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Patient Feedback Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
      body { font-family: Inter, sans-serif; padding: 24px; background:#f7fafc }
      .container { max-width: 1000px; margin:0 auto }
      .report-header { display:flex; justify-content:space-between; align-items:center; margin-bottom:16px }
      .report-title { font-size:1.4rem; font-weight:700 }
      .empty-state { text-align:center; padding:40px; color:#6b7280 }
      .rating { color: #fbbf24 }
      .table-modern { background:#fff; border-radius:8px; overflow:hidden; box-shadow:0 6px 18px rgba(0,0,0,0.06) }
      .back-link { text-decoration:none; color:#0b4fb3 }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="report-header">
        <div>
          <a href="/doctor-dashboard" class="back-link"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
          <h1 class="report-title">Patient Feedback</h1>
          <div class="text-muted">All feedback from patients</div>
        </div>
        <div>
              <button class="btn btn-secondary me-2" onclick="printReport()"><i class="fas fa-print"></i> Print</button>
              <a class="btn btn-primary" href="/doctor-dashboard">Close</a>
        </div>
      </div>

      <% if (feedbacks && feedbacks.length > 0) { %>
      <div class="table-modern">
          <div id="printable" class="feedback-list">
        <table class="table">
          <thead class="table-light">
            <tr>
              <th>Patient</th>
              <th>Rating</th>
              <th>Comment</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% feedbacks.forEach(function(f) { %>
            <tr>
              <td><%= f.patient_name %></td>
              <td>
                <span class="rating">
                  <% for (var i=1;i<=5;i++) { %>
                    <% if (i <= Number(f.rating)) { %>
                      <i class="fas fa-star"></i>
                    <% } else { %>
                      <i class="far fa-star" style="color:#e5e7eb"></i>
                    <% } %>
                  <% } %>
                </span>
                <span class="ms-2">(<%= f.rating %>/5)</span>
              </td>
              <td><%= f.comment || 'â€”' %></td>
              <td><%= new Date(f.created_at).toLocaleDateString() %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="empty-state">
        <i class="fas fa-comment-slash" style="font-size:48px;color:#cbd5e1"></i>
        <h4 class="mt-3">No Feedback Yet</h4>
        <p>Patients will leave feedback here after appointments.</p>
      </div>
      <% } %>
        <script>
          function printReport() { window.print(); }
        </script>
    </div>
  </body>
</html>
